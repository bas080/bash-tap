# Only set runtime parameters when running in Bash. (Dash compatibility)
[ ! -z ${BASH_VERSION:-} ] && {
  # This makes pipelines fail. A sensible default if you ask me.
  set -o pipefail
}

plan() {
  printf '1..%s\n' "$1"
}

diagnostics() {
  xargs -d '\n' printf '# %s\n'
}

skip() {
  ok "# skip $@"
}

skip_all() {
  printf '1..0 # skip %s\n' "$1"
}

todo() {
  not_ok "# TODO $@"
}

bail() {
  printf 'Bail out! %s\n' "$1"
}

test_success() {
  test $? -eq 0 \
    && printf 'ok - %b\n' "$1" \
    || printf 'not ok - %b\n' "${2-$1}"
}

test_failure() {
  test $? -ne 0
  test_success "$@"
}

ok() {
  printf 'ok - %b\n' "$1"
}

not_ok() {
  printf 'not %b\n' "$(ok "$@")"
}

# aliases

success() { test_success "$@"; }
failure() { test_failure "$@"; }
